<script>
  window.onscroll = function() {sticky_nav_bar()};

  var nav_bar = document.getElementById("navigation");
  var sticky = nav_bar.offsetTop;

  function sticky_nav_bar() {
    if (window.pageYOffset > sticky) {
      nav_bar.classList.add("sticky");
    } else {
      nav_bar.classList.remove("sticky");
    }
  }
</script>